import java.util.Scanner;
public class javastudy {

		public static void main(String[] args)
		{
		Scanner obj=new Scanner(System.in);
		int a,b;
		char d;
		System.out.print("Enter 1st number:");
		a=obj.nextInt();
		System.out.print("Enter 2nd number:");
		b=obj.nextInt();
		System.out.println("enter '+' to add the number:");
		System.out.println("enter '-' to substract the number:");
		System.out.println("enter '*' to multiply the numbers:");
		System.out.println("enter '/' to divide the number:");
		System.out.print("Now enter the value:");
		d=obj.next().charAt(0);
		switch(d)
		{
			case '+':
			int e=a+b;
			System.out.println("sum is:"+e);
			break;
			case '-':
			int f=a-b;
			System.out.println("Difference is:"+f);
			break;
			case '*':
			int g=a*b;
			System.out.println("multiple is:"+g);
			break;
			case '/':
			int h=a/b;
			System.out.println("divison is:"+h);
			break;
		}
}}
