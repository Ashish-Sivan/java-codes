import java.util.Scanner;
public class javastudy {

		public static void main(String[] args)
		{
		Scanner obj=new Scanner(System.in);
		String a;
		System.out.print("Enter a weekday:");
		a=obj.nextLine();
		switch(a)
		{
			case "Monday":
			System.out.println("It is the First day of the week");
			break;
			case "Tuesday":
			System.out.println("It is the Second day of the week");
			break;
			case "Wednesday":
			System.out.println("It is the Third day of the week");
			break;
			case "Thursaday":
			System.out.println("It is the Fourth day of the week");
			break;
			case "Friday":
			System.out.println("It is the Fifth day of the week");
			break;
			case "Saturday":
			System.out.println("It is the Sixth day of the week");
			break;
			case "Sunday":
			System.out.println("It is the Seventh day of the week");
			break;
			default:
			System.out.println("It is not a weekday");
			
		}
		
		
		
}}


